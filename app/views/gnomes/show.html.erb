<div class="container">
  <div class="card-gnome d-flex justify-content-between">
    <div class="card-gnome-infos">
      <%= cl_image_tag @gnome.photo.key, height: 400, width: 400, crop: :fill%>
    </div>
      <div class="calendar">
        <h1> <%= @gnome.name %></h1>
        <h5> <%= @gnome.power %></h5>
        <p> <%= @gnome.description %> </p>
        <h2 class="card-gnome-pricing"><%= @gnome.price %> â‚¬</h2>
          <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
            <h2>Your Reservation Date</h2>
            <%= simple_form_for :search, method: "get" do |f| %>
              <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
              <div class="form-buttons">
                <%= f.button :submit, "Book Gnome", class: "btn btn-primary" %>
                <%= link_to "Back", gnomes_path %>
              </div>
            <% end %>
        </div>
      </div>
  </div>
</div>

 <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
